extends layout

block content
  #price
    h1 Price
    p#usd USD: #{usd}
    p#mxn MXN: #{mxn} 
  
  #wrapper
    div(style='display: inline-block;')
      h2 Coin List
      #coinList.tg-wrap
        table.tg
          thead
            tr
              th.tg-us36 Name
              th.tg-yw4l Ticker
              th.tg-yw4l Address
              th.tg-yw4l Price BTC
              th.tg-yw4l Balance
              th.tg-yw4l Explorer
          tbody

    div(style='float: right')
      h2 Balance
      #coinBalance.tg-wrap
        table.tg
          thead
            tr
              th.tg-us36 Ticker
              th.tg-yw4l Balance
              th.tg-yw4l BTC
              th.tg-yw4l USD
              th.tg-yw4l MXN
          tbody
          
  ul
    each val in coins
      - var balace = val.balance
      - var pricemxn = parseFloat(mxn)
      - var priceusd = parseFloat(usd) 
      li= balance * pricemxn

  h2 Add Coin
  #addCoin
    fieldset
      input#inputCoinName(type='text', placeholder='Nombre')
      input#inputCoinTicker(type='text', placeholder='Ticker')
      br
      input#inputCoinAddress(type='text', placeholder='Address')
      input#inputCoinExplorer(type='text', placeholder='Explorer')
      br
      input#inputCoinPool(type='text', placeholder='Pool')
      input#inputCoinExchange(type='text', placeholder='Exchange')
      br
      button#btnAddUser Add Coin